<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shapeimgview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/result_image_view"
        android:gravity="start"
        android:layout_margin="5dip"
        shapeimgview:siBorderWidth="2dp"
        shapeimgview:siBorderColor="@color/primary"
        />
    <TextView
        android:id="@+id/result_title"
        android:layout_toRightOf="@+id/result_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        />
    <SeekBar
        android:id="@+id/selected_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/result_image_view"
        android:layout_toLeftOf="@+id/control_id"
        android:layout_below="@+id/result_title"
        android:layout_margin="0dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/result_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/result_image_view"
        android:layout_toLeftOf="@+id/result_host"
        android:layout_below="@+id/selected_seek_bar"
        android:layout_marginRight="4dp"
        android:text="Artist"
        android:textColor="@color/black"
    />
    <TextView
        android:id="@+id/result_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/control_id"
        android:layout_marginRight="5dp"
        android:textColor="@color/half_black"
        android:text="hostname"
    />
    <TextView
        android:id="@+id/result_mp3_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
    />
    <TextView
        android:id="@+id/result_lyric_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/control_id"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/selected_seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageButton1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:onClick="play"
            android:layout_margin="4dp"
            android:src="@android:drawable/ic_media_play" />
        <ImageView
            android:id="@+id/imageButton2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/imageButton1"
            android:onClick="play"
            android:layout_margin="4dp"
            android:src="@android:drawable/ic_media_pause"
            />
    </RelativeLayout>
</RelativeLayout>