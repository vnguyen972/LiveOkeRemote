<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:gravity="right">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_light"
        >
        <ImageView
            android:id="@+id/ic_move_to_top_id"
            android:layout_width="@dimen/lower_layer_width"
            android:layout_height="@dimen/lower_layer_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:src="@android:drawable/stat_sys_upload"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        >
        <ImageView
            android:id="@+id/ic_move_up_id"
            android:layout_width="@dimen/lower_layer_width"
            android:layout_height="@dimen/lower_layer_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:src="@android:drawable/arrow_up_float"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_dark"
        >
        <ImageView
            android:id="@+id/ic_move_down_id"
            android:layout_width="@dimen/lower_layer_width"
            android:layout_height="@dimen/lower_layer_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:src="@android:drawable/arrow_down_float"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_bright"
        >
        <ImageView
            android:id="@+id/ic_move_bottom_id"
            android:layout_width="@dimen/lower_layer_width"
            android:layout_height="@dimen/lower_layer_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:src="@android:drawable/stat_sys_download"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        >
        <ImageView
            android:id="@+id/ic_delete_id"
            android:layout_width="@dimen/lower_layer_width"
            android:layout_height="@dimen/lower_layer_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:src="@android:drawable/ic_menu_delete"
            />
    </LinearLayout>
</LinearLayout>