<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:shapeimgview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/imLayout"
    android:orientation="horizontal" >
    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/chatter_icon"
        android:gravity="start"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        shapeimgview:siBorderWidth="2dp"
        shapeimgview:siBorderColor="@color/primary"
        />
    <TextView
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@drawable/speech_bubble_orange"
        android:shadowColor="@color/half_black"
        android:shadowDx="1"
        android:shadowDy="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Medium Text"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/chatter_icon"
    />

</RelativeLayout>