<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <!--What you want to show in SurfaceView-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/song_icon_layout">
            <ImageView
                android:id="@+id/songs_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/song_icon_layout"
            android:layout_toEndOf="@+id/song_icon_layout"
            android:id="@+id/song_info_layout">
            <TextView
                android:id="@+id/song_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/song_title"
                android:minHeight="?android:attr/listPreferredItemHeightSmall"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:selectAllOnFocus="true"
                android:text="Title goes here"
                android:gravity="top"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/song_singer_land"
                android:minHeight="?android:attr/listPreferredItemHeightSmall"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:textSize="20sp"
                android:gravity="center_vertical|top"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:selectAllOnFocus="true"
                android:text="Singer name goes here"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>