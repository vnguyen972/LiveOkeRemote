<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/song_header"
        android:layout_marginTop="0dp"
        android:background="#A7ffeb"
        android:stretchColumns="1,2,3,4">
        <TableRow android:layout_margin="5dp">
            <TextView android:text=""
                android:layout_width="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                />
            <TextView android:text="Title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <TextView android:text="Singer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <TextView android:text="Author"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
            <TextView android:text="Producer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"/>
        </TableRow>
    </TableLayout>
    <ListView
        android:id="@+id/songs_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:choiceMode="singleChoice"
        android:divider="@color/primary_material_light"
        android:dividerHeight="1dp"
        android:layout_below="@+id/song_header" />
</RelativeLayout>